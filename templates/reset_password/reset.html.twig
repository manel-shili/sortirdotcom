{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">Réinitialiser le mot de passe</h1>

    <fieldset class="form-group border p-3">

        <legend class="w-auto px-2">Veuillez compléter le formulaire</legend>
        {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <div>
            <small>
                Entrer votre mot de passe pour le réinitialiser.
            </small>
        </div>
        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </fieldset>

{% endblock %}
