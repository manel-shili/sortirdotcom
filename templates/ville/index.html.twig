{% extends 'baseAdmin.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}

    <h1 class="text-center mb-5" >GÃ©rer les villes</h1>

    <fieldset class="form-group border p-3">

        <legend class="w-auto px-2"> Filtrer les villes</legend>
        {{ form(form) }}
    </fieldset>
    <div class="form-groupe my-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Code Postal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <div class="div-actions">
                        <a class="btn" href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier</a>
                        {{ include('ville/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="btn" href="{{ path('app_ville_new') }}"> Ajouter</a>
{% endblock %}
